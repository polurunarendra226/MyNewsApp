<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/searchview_shape"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/url_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Source"
        app:layout_constraintEnd_toStartOf="@+id/rv_dscp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url_image" />

    <TextView
        android:id="@+id/rv_dscp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="10dp"
        android:lines="5"
        app:layout_constraintEnd_toEndOf="@+id/rv_title"
        app:layout_constraintStart_toStartOf="@+id/rv_title"
        app:layout_constraintTop_toBottomOf="@+id/rv_title" />

    <TextView
        android:id="@+id/rv_publish_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Published At"

        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/rv_source"
        app:layout_constraintStart_toStartOf="@+id/rv_source"
        app:layout_constraintTop_toBottomOf="@+id/rv_source" />

    <ImageView
        android:id="@+id/url_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/rv_dscp"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>